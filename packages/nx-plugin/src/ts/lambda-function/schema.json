{
  "$schema": "https://json-schema.org/schema",
  "$id": "TsLambdaFunction",
  "title": "Adds a TypeScript Lambda function to a project",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "TypeScript project to add the Lambda function to",
      "x-prompt": "Select the TypeScript project to add the Lambda function to",
      "x-dropdown": "projects",
      "x-priority": "important"
    },
    "functionName": {
      "description": "The name of the Lambda function",
      "type": "string",
      "x-prompt": "What is the name of the Lambda function?",
      "x-priority": "important"
    },
    "functionPath": {
      "description": "Directory path within the project's source directory for the function",
      "type": "string",
      "default": "lambda-functions"
    },
    "handlerType": {
      "description": "The AWS Lambda handler type",
      "type": "string",
      "x-prompt": {
        "message": "What type of Lambda handler would you like to generate?",
        "type": "list",
        "items": [
          {
            "value": "APIGatewayProxyHandler",
            "label": "API Gateway REST API (APIGatewayProxyHandler)"
          },
          {
            "value": "APIGatewayProxyHandlerV2", 
            "label": "API Gateway HTTP API (APIGatewayProxyHandlerV2)"
          },
          {
            "value": "S3Handler",
            "label": "S3 Events (S3Handler)"
          },
          {
            "value": "SQSHandler",
            "label": "SQS Messages (SQSHandler)"
          },
          {
            "value": "EventBridgeHandler",
            "label": "EventBridge Events (EventBridgeHandler)"
          },
          {
            "value": "DynamoDBStreamHandler",
            "label": "DynamoDB Streams (DynamoDBStreamHandler)"
          },
          {
            "value": "ScheduledHandler",
            "label": "Scheduled Events (ScheduledHandler)"
          },
          {
            "value": "SNSHandler",
            "label": "SNS Notifications (SNSHandler)"
          },
          {
            "value": "ALBHandler",
            "label": "Application Load Balancer (ALBHandler)"
          },
          {
            "value": "CognitoUserPoolTriggerHandler",
            "label": "Cognito User Pool Triggers (CognitoUserPoolTriggerHandler)"
          },
          {
            "value": "CloudFormationCustomResourceHandler",
            "label": "CloudFormation Custom Resource (CloudFormationCustomResourceHandler)"
          },
          {
            "value": "KinesisStreamHandler",
            "label": "Kinesis Data Streams (KinesisStreamHandler)"
          },
          {
            "value": "Handler",
            "label": "Generic Handler"
          },
          {
            "value": "any",
            "label": "Any (no specific typing)"
          }
        ]
      },
      "default": "APIGatewayProxyHandler",
      "x-priority": "important"
    }
  },
  "required": ["project", "functionName"]
}