{
  "$schema": "https://json-schema.org/schema",
  "$id": "APIConnection",
  "title": "",
  "type": "object",
  "properties": {
    "sourceProject": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "The project which will call the API",
      "x-dropdown": "projects"
    },
    "targetProject": {
      "type": "string",
      "description": "",
      "x-prompt": "The project containing your API",
      "x-dropdown": "projects"
    },
    "auth": {
      "type": "string",
      "description": "",
      "enum": ["IAM", "None"],
      "x-prompt": "Select your API authentication strategy",
      "default": "IAM"
    }
  },
  "required": ["sourceProject", "targetProject"]
}
