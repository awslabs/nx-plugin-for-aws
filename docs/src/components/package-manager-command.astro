---
import { Code, Tabs, TabItem } from '@astrojs/starlight/components';

// buildCommand is a function which is given a package manager name and should return a string to render
const { buildCommand, highlights = [] } = Astro.props;
---
<Tabs syncKey="cli-command">
  <TabItem label="pnpm" icon="pnpm">
    <Code lang="bash" mark={highlights} code={buildCommand('pnpm')} />
  </TabItem>
  <TabItem label="yarn" icon="seti:yarn">
    <Code lang="bash" mark={highlights} code={buildCommand('yarn')} />
  </TabItem>
  <TabItem label="npm" icon="seti:npm">
    <Code lang="bash" mark={highlights} code={buildCommand('npm')} />
  </TabItem>
  <TabItem label="bun" icon="bun">
    <Code lang="bash" mark={highlights} code={buildCommand('bun')} />
  </TabItem>
</Tabs>
