---
import PackageManagerCommand from './package-manager-command.astro';
const { pkg, dev } = Astro.props;

const buildCommand = (pm) => {
  switch (pm) {
    case 'pnpm':
      return `pnpm add -${dev ? 'D' : ''}w ${pkg}`;
    case 'yarn':
      return `yarn add ${dev ? '-D ' : '' } ${pkg}`;
    case 'npm':
      return `npm install --legacy-peer-deps ${dev ? '-D ' : '' }${pkg}`;
    case 'bun':
      return `bun install ${dev ? '-D ' : '' }${pkg}`;
    default:
      return `${pm} install ${dev ? '-D ' : '' }${pkg}`;
  }
};
---
<PackageManagerCommand buildCommand={buildCommand} />
