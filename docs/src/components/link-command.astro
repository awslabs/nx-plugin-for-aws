---
import PackageManagerCommand from './package-manager-command.astro';

const { dependency, dependencyPath, projectPath } = Astro.props;

const buildCommand = (pm) => {
  switch(pm) {
    case 'bun':
      return `cd ${dependencyPath}\nbun link\ncd ${projectPath}\nbun link ${dependency}`;
    default:
      return `cd ${projectPath}\n${pm} link ${dependencyPath}`;
  }
};
---
<PackageManagerCommand buildCommand={buildCommand} />
