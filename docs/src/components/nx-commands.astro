---
import { Code, Tabs, TabItem } from '@astrojs/starlight/components';
const { commands } = Astro.props;
---
<Tabs syncKey="cli-command">
  <TabItem label="pnpm">
    <Code lang="bash" code={commands.map(c => `pnpm nx ${c}`).join('\n')} />
  </TabItem>
  <TabItem label="yarn">
    <Code lang="bash" code={commands.map(c => `yarn nx ${c}`).join('\n')} />
  </TabItem>
  <TabItem label="npm">
    <Code lang="bash" code={commands.map(c => `npx nx ${c}`).join('\n')} />
  </TabItem>
</Tabs>
