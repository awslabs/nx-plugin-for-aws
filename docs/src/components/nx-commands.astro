---
import { Code, Tabs, TabItem } from '@astrojs/starlight/components';
const { commands, postCommands = [], highlights = [], env } = Astro.props;
const envPrefix = !!env ? `${Object.entries(env).map(([k, v]) => `${k}=${v}`).join(' ')} `: ''
---
<Tabs syncKey="cli-command">
  <TabItem label="pnpm" icon="pnpm">
    <Code lang="bash" mark={highlights} code={`${envPrefix}${commands.map(c => `pnpm nx ${c}`).concat(postCommands).join('\n')}`} />
  </TabItem>
  <TabItem label="yarn" icon="seti:yarn">
    <Code lang="bash" mark={highlights} code={`${envPrefix}${commands.map(c => `yarn nx ${c}`).join('\n')}`} />
  </TabItem>
  <TabItem label="npm" icon="seti:npm">
    <Code lang="bash" mark={highlights} code={`${envPrefix}${commands.map(c => `npx nx ${c}`).join('\n')}`} />
  </TabItem>
</Tabs>
